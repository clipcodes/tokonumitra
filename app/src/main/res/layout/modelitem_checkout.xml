<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="30%"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/productimg"
                    android:background="@color/greytranspa"
                    android:layout_height="90dp"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="70%"
            android:layout_height="match_parent">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                app:flexDirection="column"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    app:layout_flexBasisPercent="70%"
                    android:layout_height="match_parent">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        app:flexDirection="row"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            app:layout_flexBasisPercent="85%"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Product Item Purchased"
                                android:layout_gravity="center|start"
                                android:id="@+id/productname"
                                android:textColor="@color/textcolor2"
                                android:lines="3"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            app:layout_flexBasisPercent="15%"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="1x"
                                android:layout_gravity="top|end"
                                android:id="@+id/qty"
                                android:textColor="@color/textcolor2"
                                android:textStyle="bold"
                                android:lines="3"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/greytranspa2"
                        android:layout_gravity="bottom"
                        android:layout_height="1dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    app:layout_flexBasisPercent="30%"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Price"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor1"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="$20"
                        android:layout_gravity="center|end"
                        android:id="@+id/productprice"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>
</FrameLayout>