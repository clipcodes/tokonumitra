<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@android:color/white"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="3dp"
                        app:srcCompat="@drawable/icon_back"
                        android:id="@+id/back"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="18sp"
                            android:lines="1"
                            android:text="Pesanan"
                            android:id="@+id/titel"
                            android:ellipsize="end"
                            android:textColor="@color/textcolor1"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/nested"
        android:background="@color/greytranspa0"
        android:animateLayoutChanges="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa1"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Informasi Pengiriman"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        app:layout_flexBasisPercent="40%"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:text="Alamat"
                            android:layout_gravity="center|start"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:text=":"
                            android:layout_gravity="center|end"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        app:layout_flexBasisPercent="60%"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/alamat"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_gravity="center|start"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        app:layout_flexBasisPercent="40%"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:text="Kurir"
                            android:layout_gravity="center|start"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:text=":"
                            android:layout_gravity="center|end"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        app:layout_flexBasisPercent="60%"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/kurir"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_gravity="center|start"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa1"
                android:layout_height="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rvorders"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Sub Total"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/subtotal"
                        android:textStyle="bold"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Biaya Pengiriman"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/ongkir"
                        android:textStyle="bold"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Total Pembayaran"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/total"
                        android:layout_marginEnd="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa1"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/containerbukti"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Bukti Pembayaran"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Atas Nama"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/atasnama"
                        android:textStyle="bold"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Nama Bank"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/namabank"
                        android:textStyle="bold"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Nomor Rekening"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/norek"
                        android:layout_marginEnd="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Nominal"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Baru"
                        android:id="@+id/nominal"
                        android:layout_marginEnd="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center|end"
                        android:textColor="@color/textcolor2"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/greytranspa1"
                    android:layout_marginTop="10dp"
                    android:id="@+id/lihatfoto"
                    app:cardElevation="0dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/greytranspa0"
                        app:cardElevation="0dp"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Lihat Foto Bukti Transaksi"
                            android:layout_gravity="center"
                            android:textColor="@color/textcolor3"
                            android:layout_margin="7dp"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/greytranspa1"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/containeraction"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/confirms"
                    android:visibility="gone"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/progres"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Konfirmasi Pembayaran"
                        android:id="@+id/paytex"
                        android:layout_margin="8dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/informasi"
                    android:layout_margin="6dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/infohead"
                            android:layout_margin="8dp"
                            android:textColor="@color/textcolor2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="match_parent"
                            android:background="@color/greytranspa1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/info"
                            android:layout_margin="8dp"
                            android:textColor="@color/textcolor2"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/star"
                            android:visibility="gone"
                            android:numStars="5"
                            android:layout_marginTop="7dp"
                            android:theme="@style/RatingBar"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/ulasan"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/textcolor2"
                            android:textSize="17sp"
                            android:text="Tulis ulasan..."
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/deliverycontainer"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="15sp"
                                android:text="Resi Pengiriman"
                                android:textStyle="bold"
                                android:layout_gravity="center|start"
                                android:textColor="@color/textcolor1"
                                android:layout_height="wrap_content" />
                        </FrameLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/greytranspa"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardElevation="0dp"
                                android:layout_margin="1dp"
                                android:background="@color/greytranspa1"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_margin="3dp"
                                    android:hint="Resi Pengiriman"
                                    android:textSize="14sp"
                                    android:id="@+id/resi"
                                    android:layout_height="wrap_content"/>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/delivery"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/googlecolor"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/deliveryprog"
                            android:visibility="invisible"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Barang Dikirim"
                            android:id="@+id/deliverytex"
                            android:layout_margin="8dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/dicline"
                    android:visibility="gone"
                    android:layout_margin="6dp"
                    app:cardBackgroundColor="@color/merah"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/diclineprog"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Tolak Pesanan"
                        android:id="@+id/diclinetex"
                        android:layout_margin="8dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/chat"
                    android:layout_margin="6dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/defaultback"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/dchatprog"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Chat Pembeli"
                        android:id="@+id/chattex"
                        android:layout_margin="8dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>