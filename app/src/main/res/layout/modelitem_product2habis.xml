<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_margin="3dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/thumb"
                    android:background="@color/greytranspa1"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/greytranspa3"
                    android:id="@+id/habis"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:text="BARANG HABIS"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="6dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/check"
                            android:layout_height="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Nama Toko"
                            android:textStyle="bold"
                            android:id="@+id/namatoko"
                            android:layout_marginStart="2dp"
                            android:textSize="12sp"
                            android:textColor="@color/textcolor2"
                            android:layout_gravity="start|center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_gravity="start|center"
                        android:isIndicator="true"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="#ebffc107"
                        android:progressBackgroundTint="@color/textcolor1"
                        android:layout_marginEnd="4dp"
                        android:id="@+id/star"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="(5)"
                        android:id="@+id/totalfeedback"
                        android:textSize="13sp"
                        android:textColor="@color/textcolor3"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:lines="1"
                        android:text="$500"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/price"
                        android:layout_gravity="center|start"
                        android:layout_height="match_parent" />
<!--                    <ImageView-->
<!--                        android:layout_width="20dp"-->
<!--                        android:layout_gravity="end"-->
<!--                        android:src="@drawable/icon_menuproduct"-->
<!--                        android:layout_height="20dp"/>-->
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"
                    android:lines="2"
                    android:text="Product Name"
                    android:textColor="@color/textcolor1"
                    android:layout_marginTop="3dp"
                    android:id="@+id/title"
                    android:layout_gravity="center|end"
                    android:layout_height="match_parent" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_gravity="center"
                                android:src="@drawable/lokasi"
                                android:layout_height="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text=" Lokasi"
                                android:textSize="12sp"
                                android:id="@+id/lokasi"
                                android:textColor="@color/textcolor2"
                                android:layout_gravity="start|center"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_gravity="center"
                                android:src="@drawable/stok"
                                android:layout_height="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="6 Stok"
                                android:id="@+id/stock"
                                android:layout_marginStart="2dp"
                                android:textSize="12sp"
                                android:textColor="@color/textcolor2"
                                android:layout_gravity="start|center"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>