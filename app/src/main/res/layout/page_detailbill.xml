<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@android:color/white"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginRight="3dp"
                    app:srcCompat="@drawable/icon_back"
                    android:id="@+id/kembalitolbar"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:lines="1"
                        android:text="Edit Profile"
                        android:id="@+id/titel"
                        android:ellipsize="end"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />

                </FrameLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/greytranspa0"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:background="@color/greytranspa1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="BILL CODE :"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="DER4TWF3FE1"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Billing Information"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="BILLING STATUS :"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/greytranspa"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/yellow"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="WAITING PAYMENT"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:textStyle="bold"
                            android:textColor="@color/textcolor1"
                            android:textSize="11sp"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardElevation="0dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/textcolor3"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardElevation="0dp"
                            android:layout_margin="1dp"
                            app:cardBackgroundColor="@color/greytranspa0"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Upload Payment Proof"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:textColor="@color/textcolor3"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/greytranspa1"
                        android:layout_marginTop="10dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="TOTAL BILLING :"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/greytranspa"
                        android:textSize="11sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="$30"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:textStyle="bold"
                        android:textColor="@color/textcolor3"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/greytranspa1"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="Payment Instructions"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/textcolor1"
                        app:cardElevation="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Please use this virtual account number below for payment"
                            android:textColor="@color/white"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="BANK NAME"
                            android:textStyle="bold"
                            android:textColor="@color/textcolor2"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Number for transfers"
                            android:textColor="@color/textcolor3"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="34453459783655"
                            android:textStyle="bold"
                            android:textColor="@color/textcolor1"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Copy Number"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/greytranspa1"
                    android:layout_height="15dp"/>
            </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>