<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="6dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:src="@color/greytranspa"
            android:layout_gravity="center"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="username"
            android:textSize="15sp"
            android:id="@+id/user"
            android:layout_marginStart="6dp"
            android:textColor="@color/textcolor1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="."
            android:textSize="12sp"
            android:layout_marginStart="3dp"
            android:textColor="@color/greytranspa"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:progressTint="@color/ratingfill"
        android:layout_marginTop="5dp"
        android:progressBackgroundTint="@color/ratingempty"
        android:rating="4"
        android:layout_gravity="center|start"
        android:id="@+id/bintangg"  />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/comment"
        android:text="Thanks a lot for products!"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/textcolor1"
        android:layout_gravity="center|start"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/greytranspacomment"
        android:layout_height="1dp"/>
</LinearLayout>