<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:id="@+id/container_toolbar_home"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:src="@drawable/logoputih"
                        android:layout_gravity="center"
                        android:layout_height="40dp"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center|end"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="center"
                        android:id="@+id/edit_profile"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/setting"
                            android:layout_height="24dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:id="@+id/chat"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/chatt"
                            android:layout_height="20dp"/>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center|start"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotopengguna"
                        android:layout_width="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/foto_defaul_mitra"
                        android:layout_height="70dp"
                        app:civ_border_width="0dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Mahathir Muhammad"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:id="@+id/fullname"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="haapplab@gmail.com"
                            android:textSize="14sp"
                            android:id="@+id/email"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/greytranspa1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/pesanan"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center|start"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chattwarna"
                    android:layout_height="23dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pesanan Saya"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textcolor1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/greytranspa1"/>

