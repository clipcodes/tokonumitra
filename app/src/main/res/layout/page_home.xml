<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <FrameLayout
                        android:orientation="vertical"
                        android:id="@+id/container_toolbar_home"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">
                        <FrameLayout
                            android:layout_width="110dp"
                            android:layout_gravity="start|center"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/logoputih"
                                android:layout_gravity="center"
                                android:layout_height="40dp"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="end|center"
                            android:id="@+id/tambahproduk"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ikon_tambah"
                                android:layout_height="22dp"/>
                        </FrameLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:id="@+id/kategori"
                        android:background="@color/white"
                        android:layout_height="match_parent">
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:id="@+id/published"
                                android:layout_height="?attr/actionBarSize">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Terpublikasi"
                                    android:id="@+id/texterbaru"
                                    android:textSize="14sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textcolor2"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:id="@+id/inpublished"
                                    android:layout_gravity="bottom"
                                    android:background="@color/colorPrimary"
                                    android:layout_height="1dp"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:id="@+id/waiting"
                                android:layout_height="?attr/actionBarSize">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Menunggu"
                                    android:textSize="14sp"
                                    android:id="@+id/textermahal"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textcolor2"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_gravity="bottom"
                                    android:id="@+id/inwaiting"
                                    android:background="@color/greytranspa2"
                                    android:layout_height="1dp"/>
                            </FrameLayout>
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:id="@+id/dicline"
                                android:layout_height="?attr/actionBarSize">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Ditolak"
                                    android:id="@+id/textermurah"
                                    android:textSize="14sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/textcolor2"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:id="@+id/indicline"
                                    android:layout_gravity="bottom"
                                    android:background="@color/greytranspa2"
                                    android:layout_height="1dp"/>
                            </FrameLayout>
                        </com.google.android.flexbox.FlexboxLayout>
                    </LinearLayout>
                </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
    android:id="@+id/nested"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvproduct"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/lodingbot"
                    android:layout_gravity="center"
                    app:indicatorName="BallPulseIndicator"
                    app:indicatorColor="@color/colorPrimary"/>
            </FrameLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>