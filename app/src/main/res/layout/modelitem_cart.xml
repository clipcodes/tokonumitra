<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="10%"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkBox"
                android:checked="true"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="30%"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="4dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/productimg"
                    android:background="@color/greytranspa"
                    android:layout_height="90dp"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            app:layout_flexBasisPercent="60%"
            android:layout_height="match_parent">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                app:flexDirection="column"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    app:layout_flexBasisPercent="70%"
                    android:layout_height="match_parent">
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        app:flexDirection="row"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_width="match_parent"
                            app:layout_flexBasisPercent="85%"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Product Item Purchased"
                                android:layout_gravity="center|start"
                                android:id="@+id/productname"
                                android:textColor="@color/textcolor2"
                                android:lines="3"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            app:layout_flexBasisPercent="15%"
                            android:id="@+id/delete"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/icon_delete"
                                android:layout_gravity="end"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                    </com.google.android.flexbox.FlexboxLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/greytranspa2"
                        android:layout_gravity="bottom"
                        android:layout_height="1dp"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    app:layout_flexBasisPercent="30%"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="3dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/greytranspa1"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                app:cardElevation="0dp"
                                android:layout_margin="1dp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="end"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:id="@+id/reduce"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:src="@drawable/icon_reduce"
                                            android:layout_height="wrap_content"/>
                                        <View
                                            android:layout_width="1dp"
                                            android:background="@color/greytranspa"
                                            android:layout_height="match_parent"/>
                                    </LinearLayout>
                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:text="1"
                                            android:textSize="17sp"
                                            android:textColor="@color/textcolor2"
                                            android:id="@+id/qty"
                                            android:layout_marginStart="15dp"
                                            android:layout_gravity="center"
                                            android:layout_marginEnd="15dp"
                                            android:layout_height="wrap_content"/>
                                    </FrameLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:id="@+id/add"
                                        android:layout_height="wrap_content">
                                        <View
                                            android:layout_width="1dp"
                                            android:background="@color/greytranspa"
                                            android:layout_height="match_parent"/>
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:src="@drawable/icon_add"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=" sisa stok 9"
                            android:id="@+id/sisastok"
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:textColor="@color/textcolor2"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>
    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/greytranspa"
        android:layout_height="1dp"/>
</FrameLayout>