<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@android:color/white"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/back"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="3dp"
                        app:srcCompat="@drawable/icon_back"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="17sp"
                        android:lines="1"
                        android:text="Edit Profil"
                        android:id="@+id/titel"
                        android:ellipsize="end"
                        android:textColor="@color/textcolor1"
                        android:layout_height="wrap_content" />

                </FrameLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/greytranspa0"
        android:orientation="vertical"
        android:layout_margin="3dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Email"
                android:id="@+id/email_mitra"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:nextFocusDown="@+id/password"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="NIK Mitra"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="NIK Mitra"
                android:id="@+id/nik_mitra"
                android:lines="1"
                android:nextFocusDown="@+id/nama_mitra"
                android:inputType="numberDecimal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Nama Mitra"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Nama Mitra"
                android:id="@+id/nama_mitra"
                android:lines="1"
                android:nextFocusDown="@+id/nama_toko_mitra"
                android:inputType="textCapWords"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Nama Toko"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Nama Toko"
                android:id="@+id/nama_toko_mitra"
                android:lines="1"
                android:nextFocusDown="@+id/alamat_toko_mitra"
                android:inputType="textCapWords"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Alamat Toko"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Alamat Toko"
                android:id="@+id/alamat_toko_mitra"
                android:lines="1"
                android:nextFocusDown="@+id/no_telp_mitra"
                android:inputType="textCapWords"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Nomor HP"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Nomor Hp"
                android:id="@+id/no_telp_mitra"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/no_rekening_mitra"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Nomor Rekening"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Nomor Rekening"
                android:id="@+id/no_rekening_mitra"
                android:nextFocusDown="@+id/deskripsi_toko_mitra"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Deskripsi"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Deskripsi"
                android:id="@+id/deskripsi_toko_mitra"
                android:inputType="textCapSentences"
                android:nextFocusDown="@+id/provinsi_mitra"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Provinsi"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="6dp"
                android:id="@+id/pilihprov"
                android:background="@color/greytranspa1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/textcolor2"
                    android:text="Pilih Provinsi"
                    android:id="@+id/provinsi_mitra"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/icon_chivronright"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="6dp"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Kabupaten/Kota"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="6dp"
                android:id="@+id/pilihkabkot"
                android:background="@color/greytranspa1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/textcolor2"
                    android:text="Pilih Kota/Kab"
                    android:id="@+id/kabupaten_mitra"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/icon_chivronright"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="6dp"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Kecamatan"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Kecamatan"
                android:id="@+id/kecamatan_mitra"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textCapWords"
                android:nextFocusDown="@+id/kecamatan_mitra"
                android:lines="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Kode Pos"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor2"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="Kode Pos"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/signup"
                android:id="@+id/kode_pos_mitra"
                android:lines="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/save"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Simpan"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/gotex"
                    android:textColor="@color/white"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    android:id="@+id/progress"
                    android:visibility="invisible"
                    android:layout_height="25dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/merah"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:id="@+id/err"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>